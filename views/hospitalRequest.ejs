<body class="hospitalRequestBG">

    <section  >
        <div class="container py-5 h-100 ">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-light text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
      
                  <div class="mb-md-5 mt-md-4 pb-5">
      
                    <form action="/hospitalRequest" method="post">
                    <div class="form-outline form-white mb-4">
                        <select name="organ" class="form-control hospitalRequestOptions form-select" >
                            <option  selected>What do you need?</option>
                            <option value="Heart"> Heart</option>
                            <option value="Lungs"> Lungs</option>
                            <option value="Kidney"> Kidney</option>
                            <option value="Pancreas"> Pancreas</option>
                            <option value="Liver"> Liver</option>
                            </select>
                    </div>

                    <div class="form-outline form-white mb-4 ">
                        <select name="urgency" class="form-control hospitalRequestOptions form-select" >
                            <option  selected>Mark the urgency</option>
                            <option value="Immediate" class="color-red"> High Priority</option>
                            <option value="Moderate" class="color-yellow"> Within 1-2 days</option>
                            <option value="Not urgent" class="color-green"> Within a week</option>
                            </select>
                    </div>
      
                    <div class="form-outline form-white mb-4">
                      <input type="text" id="organSpecs" placeholder="Any other details" class="form-control form-control-lg hospitalRequestOptions" name="organSpecs"/>
                      
                    </div>
      
                    <button class="btn  btn-lg px-5 hospitalRequestButton" type="submit">Request</button>
                </form>

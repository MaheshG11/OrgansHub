<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alerts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/hospitalAlerts.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

    <section id="navbar">

        <nav class="navbar navbar-expand-lg bg-body-tertiary hospitalAlertsNavbar">
            <div class="container-fluid">
                <!-- <a class="navbar-brand" href="#">OrganHub</a> -->
                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/hospitalHome">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/request">Request</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/database">Database</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/address">Address</a>
                        </li>

               

                        <!-- <li class="nav-item"><a class="nav-link" href="#">Sign up</a></li> -->

                        <li class="nav-item"><a class="nav-link" href="/profileHospital"><i class="fa-solid fa-user fa-xl" style="color: #f2f2f2;"></i> </a></li>
                           
                            
                    </ul>
                </div>
            </div>
        </nav>

    </section>
    <%if(foundAlerts!= null){%>
      <%foundAlerts.forEach(function(alerts){%>
        <%foundHospitals.forEach(function(hospital){%>
          <%if(String(alerts.email)=== String(hospital.email)){%>
            <section>
            <div class="card mb-3 alertsCard" >
              <div class="row g-0">
                <div class="col-md-2">
                  <img src="/images/plus.png" class="img-fluid rounded-start hospitalLogo" alt="...">
                </div>
                <div style="display: flex;" class="col-md-10 contentBackground">
                <div class="col-md-3">
                  <div class="card-body">
                      <div class="alertContent"><p>Requirement: <%=alerts.donorOrgan%></p></div>
                    
                      <div class="alertContent"><p>Hospital: <%=hospital.hospitalName%></p></div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card-body">
                      <div class="alertContent"><p>State: <%=hospital.state%></p></div>
                    
                      <div class="alertContent"><p>City: <%=hospital.city%> </p></div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card-body">
                      <div class="alertContent"><p>Contact No. <%=hospital.contactNo%> </p></div>
                    
                      <div class="alertContent"><p>E-mail: <%=hospital.email%> </p></div>
                  </div>
                </div>
                <div class="col-md-1">
                  <div class="card-body">
                    <%if(String(alerts.donorUrgency) === "Immediate"){%>
                      <div class="rectangle"><span class="badge badge-pill bg-danger">High Priority</span></div>
                    <%}%>
                    <%if(String(alerts.donorUrgency) === "Moderate"){%>
                      <div class="rectangle"><span class="badge badge-pill bg-warning">Medium Priority</span></div>
                    <%}%>
                    <%if(String(alerts.donorUrgency) === "Not urgent"){%>
                      <div class="rectangle"><span class="badge badge-pill bg-success">Low Priority</span></div>
                    <%}%>
                      
                      <!-- <div class="rectangle-red"></div>
                      <div class="rectangle-red"></div> -->
      
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="card-body">
                      <div class="optionMenu"><a href="http://"><i class="fa-solid fa-ellipsis-vertical fa-2xl" style="color: #4f2b7c;"></i></a></div>
      
                  </div>
                </div>
      
      
                
              </div>
          </div>
            </div>
          </section>
          <%}%>
        <%})%>
      <%})%>
    <%}%>
    
    <script src="https://kit.fontawesome.com/cee42972ba.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
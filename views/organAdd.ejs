<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Organ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/organAdd.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
 
    
</head>
<body >
    <!-- Section: Design Block -->
<section class="addBody">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start">
      <div class="container">
        <div class="row gx-lg-5 align-items-center loginBody">

  
          <div class="col-lg-6 mb-5 mb-lg-0 formBG">
            <div class="card">
              <div class="card-body py-5 px-md-7 formBody">
                <h1 class="formHeader">Add Organ</h1>
                <form class="hospitalForm" method="post" action="/organAdd">
                  <!-- 2 column grid layout with text inputs for the first and last names -->
                  
                  <!-- <div class="row" style="justify-content: space-evenly;">

                  </div> -->

                  <div class="row">
                    <div class="form-outline mb-5 formFields" >
                        <select name="organs" class="form-control organOptions form-select" >
                            <option  disabled selected>Organ</option>
                            <option value="Heart"> Heart</option>
                            <option value="Lungs"> Lungs</option>
                            <option value="Kidney"> Kidney</option>
                            <option value="Pancreas"> Pancreas</option>
                            <option value="Liver"> Liver</option>
                            </select>
                    </div>
                  </div>

                  <div class="row" style="justify-content: center;">
                    <div class="col-md-4 mb-4 formFields">
                      <div class="form-outline mb-4 " >
                        <input type="date" id="extractionDate" placeholder="Date of Extraction" class="form-control" name="date"/>
                        <label for="date" style="color:white">Date of Extraction</label>
                      </div>
                    </div>
                    <div class="col-md-4 mb-4 formFields">
                      <div class="form-outline mb-4" >
                        <input type="time" id="extractionTime" placeholder="Time of Extraction" class="form-control" name="time"/>
                        <label for="date" style="color:white">Time of Extraction</label>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="form-outline mb-5 formFields" >
                        <select name="bloodGroup" class="form-control organOptions form-select" >
                            <option  disabled selected>Blood Group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            </select>
                    </div>
                  </div>

                  <div class="row formFields"style="margin-right: 15rem;" >
                    <div class="col-md-4 mb-4 ">
                    <div class="form-outline mb-4 form-floating"  >
                      <textarea name="parameters" id="parameters" cols="40" rows="5" placeholder="Organ specifications"></textarea>
                    </div>
                    </div>
                  </div>


                  <div class="row formFields"  >
                    <div class="col-md-4 mb-4 ">
                    <div class="form-outline mb-4 "  >
                      <input type="email" id="donorEmail" placeholder="Hospital Email" class="form-control" name="email"/>
                    </div>
                    </div>
                  </div>



                  
  
                  <!-- Submit button -->
                  <div class=" formFields">
                  <button type="submit" class="btn btn-primary btn-block mb-4 addButton">
                    Add
                  </button>
                </div>





                </form>
                
              </div>
              <div class="row ">
                
              </div>
            </div>
          </div>
          <div class="col-lg-5 mb-5 mb-lg-0 addSideIMG">
            <img class="img-fluid" src="/images/holdingHeart.png" alt="">

          </div>
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>
  <!-- Section: Design Block -->
  <script language="javascript">print_state("sts");</script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
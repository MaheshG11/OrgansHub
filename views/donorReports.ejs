    </section>
    <section >
    <div class="donorReports">
        <h2 style="text-align: center;margin:4rem;">View Uploaded Reports</h2>
        <form action="" method="get">
    <table class="table align-middle mb-0 bg-white table-hover" style="margin:auto">
        <thead class="bg-light">
          <tr>
            <th>Report Name</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <%if(foundReport!= null){%>
            <%foundReport.forEach(function(report){%>
              <%if(String(report.email)===String(email)){%>
                <tr>
                  <td>
                      <p class="fw-normal mb-1"><%=report.reportName%></p>
                  </td>
                  <td>
                    <p class="fw-normal mb-1"><%=report.date%></p>
                    <p class="text-muted mb-0"><%=report.time%></p>
                  </td>
                  <td>
                    <a href="<%=report.report%>">
                      <button type="submit" class="btn btn-link btn-sm btn-rounded">
                        View
                      </button>
                    </a>
                  </td>
                </tr>
                <%};%>
                <%});%>
                <%};%>
          
          
        </tbody>
      </table>
    </form>
    </div>
</section>
    <div>
          <div>
            <div class="row">
              <div class="mx-auto col-10 col-md-8 col-lg-6">
                <!-- Form -->
                <form style="border: solid" class="form-example" action="/Reports" method="post">
                    <h2 style="text-align: center;margin:4rem;" >Upload Medical Reports</h2>
                  <!-- Input fields -->
                  <div class="form-group reportForm">
                    <input type="text" id="reportName" class="form-control w-50 mb-4 " name="reportName" placeholder="Report Name"/>
                  </div>
                  <div class="form-group reportForm">
                    <input type="date" id="reportDate" placeholder="Date" class="form-control w-25 " name="date"/>
                    <label for="date" class="mb-4" >Date</label>
                  </div>
                  <div class="form-group reportForm">
                    <input type="time" id="reportTime" placeholder="Time" class="form-control w-25 " name="time"/>
                    <label for="date" class="mb-4" >Time</label>
                  </div>
                  
                  <div class="form-group reportForm" >
                    <input type="text" id="reportLink" class="form-control w-50 mb-4" name="reportLink" placeholder="Add drive link of reports"/>
                  </div>
      
                  <div class="form-group reportForm" >
                    <button  type="submit" class="btn btn-primary btn-customized mt-4 mb-4">Upload</button>
                  </div>
                  
                </form>
                <!-- Form end -->
              </div>
            </div>
          </div>
        
    </div>

    
</body>

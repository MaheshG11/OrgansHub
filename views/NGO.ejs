<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NGO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/NGO.css">
    <link rel="stylesheet" href="css/hospitalLogin.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    
</head>
<body class="ngoBody">
        <!-- Section: Design Block -->
        <section class="">
            <!-- Jumbotron -->
            <div class="px-4 py-5 px-md-5 text-center text-lg-start" >
              <div class="container">
                <div class="row gx-lg-5 align-items-center">
        
          
                  <div class="col-lg-6 mb-5 mb-lg-0 ms-5">
                    <div class="card">
                      <div class="card-body py-5 px-md-7 formBody">
                        <h1 class="ngoHeader">Keep up the good work !</h1>
                        <form class="hospitalForm" method="post" action="/ngo">

                
        
                          <div class="row mb-4">
                            <div class="col-md-4 mb-4 formFields" style="margin-left: 7rem;">
                              
                                <input type="text" id="ngoName" placeholder="Name" class="form-control py-3" name="ngoName" />
                            </div>
                            <div class="col-md-4 mb-4 formFields">
                              <div class="form-outline">
                                <input type="text" id="regNo" placeholder="Registration No." class="form-control py-3" name="regNo" />
                       
                              </div>
                            </div>
        
        
                          </div>
                          <div class="row mb-4">
                            <div class="form-outline mb-4 formFields" style="width: 75%; padding-left: 10rem;">
                              <input type="text" id="ngoWebsite" placeholder="Website" class="form-control py-3"  name="ngoWebsite"/>
                            </div>
                          </div>
        
                          <div class="row mb-4">
                            <div class="form-outline mb-4 formFields" style="width: 75%; padding-left: 10rem;">
                              <input type="email" id="ngoEmail" placeholder="Email" class="form-control py-3"  name="email"/>
                            </div>
                          </div>
                          <div class="row mb-4">
                            <div class="form-outline mb-4 formFields" style="width: 75%; padding-left: 10rem;">
                              <input type="text" id="ngoProposal" placeholder="Proposal Link" class="form-control py-3" name="ngoProposal" />
                            </div>
                          </div>
        
        
                          
          
                          <!-- Submit button -->
                          <div class="hospitalFormButton">
                          <button type="submit" class="btn btn-primary btn-block mb-4 ">
                            Submit
                          </button>
                        </div>
        
            
        
        
                        </form>
                        
                      </div>
                      <div class="row ">
                        
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-5 mb-5 mb-lg-0">
                    <img class="ngoImg" src="images/Rectangle 82.png" alt="">
        
                  </div>
                </div>
              </div>
            </div>
            <!-- Jumbotron -->
          </section>
    
</body>
<script src="https://kit.fontawesome.com/cee42972ba.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>